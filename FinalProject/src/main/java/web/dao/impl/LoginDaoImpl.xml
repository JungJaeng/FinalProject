<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Mapper DOCTYPE -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="web.dao.face.LoginDao">

	<insert id="insertLogin" parameterType="web.dto.Login">
		INSERT INTO logintb (id, pw, email, phone)
		VALUES (#{id }, #{pw }, #{email }, #{phone })
	</insert>

	<select id="selectCntLogin"
	 parameterType="web.dto.Login"
	 resultType="int">
		SELECT COUNT(*) FROM logintb
		WHERE id = #{id } AND pw = #{pw }	
	</select>

	<select id="selectLoginById"
	 parameterType="web.dto.Login"
	 resultType="web.dto.Login">
		SELECT * FROM logintb
		WHERE id = #{id }
	</select>
	
	<delete id="infoWithdrawDao"
	parameterType="String">
	DELETE FROM logintb
	WHERE id= #{id}
	
	</delete>
	
	<update id="updateDao"
	parameterType="web.dto.Login">
	UPDATE logintb
	SET 
		
		pw= #{pw},
		email=#{email},
		phone=#{phone}
	WHERE
		id=#{id}
	</update>
	
	<insert id="insertFile"
	parameterType="web.dto.Filetest">
	INSERT INTO fileupload(fileno,userid,origin_name,stored_name)
	VALUES(fileupload_seq.nextval,#{userid},#{origin_name},#{stored_name})
	</insert>
	
	<select id="selectImgDao"
	parameterType="String"
	resultType="web.dto.Filetest">
	SELECT * FROM fileupload
	WHERE userid=#{loginid}
	</select>
	
	<select id="selectImgCnt"
	 parameterType="String"
	 resultType="int">
		SELECT COUNT(*) FROM fileupload
		WHERE userid = #{userid }
	</select>
	
	<delete id="Imgdelete"
	parameterType="String">
	DELETE FROM fileupload WHERE userid=#{userid}
	</delete>
	
	
</mapper>